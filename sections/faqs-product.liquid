
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    padding-right: 20vw;
    padding-left: 20vw;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-right: 20vw;
    padding-left: 20vw;
    }
  }

    /* FAQ COLLAPSE/EXPAND STYLES */
  * {
    box-sizing: border-box;
  }
  .faqanswer {
  	display: none;
  }

  .content {
    
    transition: max-height 0.2s ease-out;
  }
  
  .faqs-item__content .content p {
      font-weight: 300;
      color: #201616;
      margin-bottom: 0;
      margin-top: 24px;
      font-size: 20px;
      font-family: Karla,sans-serif;
  }
  
  .togglefaq {
  	text-decoration: none;
  }
  
  .icon-plus {
  	color: #5ec4cd;
  	margin-right: 20px;
  	font-size: 20px;
  	float:left;
  }
  
  .icon-minus {
  	color: #5ec4cd;
  	margin-right: 20px;
  	font-size: 20px;
  	float:left;
  }
  
  p {
    margin: 0;
    padding-bottom: 20px;
  }

  .collapsible {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: 0;
    width: 100%;
    border: none;
    text-align: left;
    background: none;
    outline: none;
    font-size: 15px;
  }
{%- endstyle -%}
{% assign handle = page.handle %}
{% assign product = all_products[handle] %}



<section class="faqs-section" >
  <div class="page-width" >
    <div class="faqs-list" >
      {%- for block in section.blocks -%}
        <div class="faqs-item__content" >
          <a href="#" class="togglefaq faqs-list__item collapsible"><i class="icon-plus"></i> {%- if block.settings.title != blank -%}
              <h3 class="faqs-item__title" >{{ block.settings.title | escape }}</h3>{%- endif -%}
          </a>
          
          <div class="content faqanswer">
            <div>{{ block.settings.text }}</div>
          </div>
        </div>
        
      {%- endfor -%}    
    </div>
  </div>
</section>


<div style="background-color:{{product.metafields.custom.color_primario}};">
  <div class="video-section isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding">
    <div
      {% if section.settings.full_width %}
        class="page-width"
      {% endif %}
    ></div>
  
  </div>
</div>

<script>
  //faq toggle stuff 
  $('.togglefaq').click(function(e) {
  e.preventDefault();
  var notthis = $('.active').not(this);
  notthis.find('.icon-minus').addClass('icon-plus').removeClass('icon-minus');
  notthis.toggleClass('active').next('.faqanswer').slideToggle(300);
   $(this).toggleClass('active').next().slideToggle("fast");
  $(this).children('i').toggleClass('icon-plus icon-minus');
  });
</script>

{% schema %}
{
